TINYCC_DIR = ../inst/tinycc
PKG_CPPFLAGS = -I$(TINYCC_DIR)/include -I$(TINYCC_DIR)/lib/tcc/include

# Static linking only â€” avoids libtcc printf symbols leaking into the
# shared library and triggering R CMD check warnings about non-API entry
# points (e.g. printf, fprintf, vsnprintf).
PKG_LIBS = -L$(TINYCC_DIR)/lib -ltcc

all: $(SHLIB)
